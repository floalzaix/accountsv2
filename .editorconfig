# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{ts,html}]
indent_size = 2

[*.{py,pyi}]
indent_size = 4
max_line_length = 79

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_size = 2
